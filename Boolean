//Booleans
//Muitas vezes, na programação, você precisará de um tipo de dados que só pode ter um de dois valores

SIM/NÃO
LIGADO/DESLIGADO
VERDADEIRO/FALSO
//Ex:
{
bool isCSharpFun = true;
bool isFishTasty = false;
Console.WriteLine(isCSharpFun);   
Console.WriteLine(isFishTasty);
}
//---------------------------------------------------------------------------------------------------------------------------------
//Confirma se o número é maior ou menor do que 10
{
int x = 10;
int y = 9;
Console.WriteLine(x > y);
}
//---------------------------------------------------------------------------------------------------------------------------------